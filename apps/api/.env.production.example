# AgentVerse API - Production Environment Configuration
# Copy this file to .env and update with your production values

# Application
PROJECT_NAME=AgentVerse API
VERSION=0.1.0
ENVIRONMENT=production
DEBUG=false

# API
API_V1_STR=/api/v1

# Security
# REQUIRED: Generate a strong secret (use: openssl rand -hex 32)
SECRET_KEY=your-production-secret-key-change-this
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Database
# REQUIRED: Update with your production database connection
DATABASE_URL=postgresql+asyncpg://user:password@your-db-host:5432/agentverse

# Redis
# REQUIRED: Update with your production Redis URL
REDIS_URL=redis://your-redis-host:6379/0

# CORS
# REQUIRED: Set your production frontend URLs
CORS_ORIGINS=["https://your-domain.com","https://www.your-domain.com"]

# OpenRouter
# REQUIRED: Get your API key at https://openrouter.ai/keys
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
DEFAULT_MODEL=openai/gpt-4o-mini

# Sentry (recommended for production error tracking)
SENTRY_DSN=https://your-sentry-dsn

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Simulation Limits
MAX_AGENTS_FREE=1000
MAX_AGENTS_PRO=10000
MAX_AGENTS_ENTERPRISE=100000
DEFAULT_BATCH_SIZE=50
SIMULATION_TIMEOUT_SECONDS=300

# AgentVerse API Environment Variables

# Application
PROJECT_NAME=AgentVerse API
VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# API
API_V1_STR=/api/v1

# Security
SECRET_KEY=your-super-secret-key-change-in-production-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/agentverse

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS (JSON array format)
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# OpenRouter - Get your key at https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-your-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
DEFAULT_MODEL=openai/gpt-4o-mini

# Sentry (optional)
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Simulation Limits
MAX_AGENTS_FREE=1000
MAX_AGENTS_PRO=10000
MAX_AGENTS_ENTERPRISE=100000
DEFAULT_BATCH_SIZE=50
SIMULATION_TIMEOUT_SECONDS=300

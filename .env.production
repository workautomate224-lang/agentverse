# AgentVerse Production Environment Template
# Copy this to .env on the production server and update values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_USER=agentverse
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=agentverse

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=GENERATE_WITH_openssl_rand_hex_32

# ===========================================
# API CONFIGURATION
# ===========================================
# OpenRouter API Key for AI model access
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-your-key-here

# CORS allowed origins (frontend URL)
CORS_ORIGINS=https://your-frontend-domain.com

# ===========================================
# BACKEND URL
# ===========================================
BACKEND_API_URL=http://localhost:8000

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
NEXT_PUBLIC_API_URL=https://your-api-domain.com
NEXTAUTH_URL=https://your-frontend-domain.com
NEXTAUTH_SECRET=GENERATE_WITH_openssl_rand_base64_32

# ===========================================
# STORAGE CONFIGURATION (Optional)
# ===========================================
STORAGE_BACKEND=local
STORAGE_LOCAL_PATH=/var/agentverse/storage

# For S3-compatible storage:
# STORAGE_BACKEND=s3
# STORAGE_BUCKET=agentverse-artifacts
# STORAGE_REGION=us-east-1
# STORAGE_ACCESS_KEY=your-access-key
# STORAGE_SECRET_KEY=your-secret-key

# ===========================================
# OPTIONAL INTEGRATIONS
# ===========================================
# Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn

# Census API for enhanced persona data
# CENSUS_API_KEY=your-census-api-key
